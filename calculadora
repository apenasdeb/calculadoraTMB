<script>
function calculateBMR(){constgender:document.getElementById(gender).value;constweight:parseFloat(document.getElementById(weight).value);constheight:parseFloat(document.getElementById(height).value);constage:parseInt(document.getElementById(age).value);constactivity:parseFloat(document.getElementById(activity).value)}let bmr;
if (gender === male){bmr:10 * weight + 6.25 * height - 5 * age + 5}else{bmr:10 * weight + 6.25 * height - 5 * age - 161}
